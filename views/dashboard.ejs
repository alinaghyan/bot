<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white fw-bold"><i class="fas fa-list-alt me-2"></i> لیست کمپین‌ها</h2>
        <a href="/campaign/create" class="btn btn-glass btn-glass-primary">
            <i class="fas fa-plus me-2"></i> تعریف پروژه جدید
        </a>
    </div>

    <div class="glass-card">
        <div class="table-responsive">
            <table class="table table-glass align-middle">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>عنوان پروژه</th>
                        <th>شبکه</th>
                        <th>وضعیت</th>
                        <th>تاریخ ایجاد</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (campaigns.length === 0) { %>
                        <tr>
                            <td colspan="6" class="text-center py-5 text-white-50">
                                <i class="fas fa-folder-open fa-3x mb-3 d-block"></i>
                                هنوز هیچ کمپینی تعریف نشده است
                            </td>
                        </tr>
                    <% } %>
                    <% campaigns.forEach(camp => { %>
                    <tr>
                        <td><%= camp.id %></td>
                        <td class="fw-bold"><%= camp.title %></td>
                        <td><span class="badge bg-light text-dark"><i class="fab fa-telegram me-1"></i> <%= camp.network %></span></td>
                        <td>
                            <span class="badge <%= camp.status == 'active' ? 'bg-success' : 'bg-secondary' %> bg-opacity-75">
                                <%= camp.status == 'active' ? 'فعال' : 'غیرفعال' %>
                            </span>
                        </td>
                        <td dir="ltr" class="text-white-50"><%= new Date(camp.created_at).toLocaleString('fa-IR') %></td>
                        <td>
                            <div class="btn-group">
                                <a href="/report/<%= camp.id %>" class="btn btn-sm btn-glass" title="گزارش">
                                    <i class="fas fa-chart-pie me-1"></i> گزارش
                                </a>
                                <% if (camp.status !== 'active') { %>
                                    <button class="btn btn-sm btn-glass text-success" onclick="startBot(this, <%= camp.id %>)" title="شروع عملیات مانیتورینگ">
                                        <i class="fas fa-play me-1"></i> شروع عملیات مانیتورینگ
                                    </button>
                                <% } else { %>
                                    <button class="btn btn-sm btn-glass text-warning" onclick="stopBot(this, <%= camp.id %>)" title="توقف عملیات مانیتورینگ">
                                        <i class="fas fa-stop me-1"></i> توقف عملیات مانیتورینگ
                                    </button>
                                    <button class="btn btn-sm btn-glass text-success" onclick="restartBot(this, <%= camp.id %>)" title="اجرای مجدد مانیتورینگ">
                                        <i class="fas fa-redo me-1"></i> اجرای مجدد
                                    </button>
                                <% } %>
                                <a href="/campaign/<%= camp.id %>/edit" class="btn btn-sm btn-glass text-info" title="ویرایش">
                                    <i class="fas fa-edit me-1"></i> ویرایش
                                </a>
                                <button class="btn btn-sm btn-glass text-danger" onclick="deleteBot(this, <%= camp.id %>)" title="حذف">
                                    <i class="fas fa-trash me-1"></i> حذف
                                </button>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    function startBot(btn, id) {
        if(!confirm('آیا مطمئن هستید که می‌خواهید عملیات مانیتورینگ را شروع کنید؟ پنجره مرورگر باز خواهد شد.')) return;
        apiCall('/api/start-bot', { id }, btn);
    }

    function restartBot(btn, id) {
        if(!confirm('آیا مطمئن هستید که می‌خواهید عملیات مانیتورینگ را دوباره اجرا کنید؟')) return;
        apiCall('/api/start-bot', { id }, btn);
    }

    function stopBot(btn, id) {
        if(!confirm('آیا از توقف این کمپین مطمئن هستید؟')) return;
        apiCall('/api/stop-bot', { id }, btn);
    }

    function deleteBot(btn, id) {
        if(!confirm('آیا از حذف کامل این کمپین و تمام نتایج آن مطمئن هستید؟ این عملیات غیرقابل بازگشت است.')) return;
        apiCall('/api/delete-campaign', { id }, btn);
    }

    function apiCall(url, body, btn) {
        // Safe check for btn
        if (!btn) {
            console.error('Button element not passed to apiCall');
            return;
        }
        
        const originalHtml = btn.innerHTML;
        btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
        btn.disabled = true;
        
        fetch(url, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(body)
        })
        .then(res => res.json())
        .then(data => {
            alert(data.message);
            if(data.success) location.reload();
            else {
                btn.innerHTML = originalHtml;
                btn.disabled = false;
            }
        })
        .catch(err => {
            alert('Error: ' + err);
            btn.innerHTML = originalHtml;
            btn.disabled = false;
        });
    }
</script>

